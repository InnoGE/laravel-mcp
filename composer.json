{
    "name": "innoge/laravel-mcp",
    "description": "A package for developing MCP Servers with Laravel.",
    "keywords": [
        "InnoGE",
        "laravel",
        "laravel-mcp",
        "mcp",
        "model-context-protocol"
    ],
    "homepage": "https://github.com/innoge/laravel-mcp",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Geisendoerfer",
            "email": "geisi@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0||^13.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1",
        "larastan/larastan": "^2.9||^3.0",
        "orchestra/testbench": "^9.0.0||^10.0.0||^11.0.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "InnoGE\\LaravelMcp\\": "src/",
            "InnoGE\\LaravelMcp\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InnoGE\\LaravelMcp\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "InnoGE\\LaravelMcp\\LaravelMcpServiceProvider"
            ],
            "aliases": {
                "LaravelMcp": "InnoGE\\LaravelMcp\\Facades\\LaravelMcp"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
